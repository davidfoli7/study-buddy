# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/study_buddy
TEST_DATABASE_URL=postgresql://username:password@localhost:5432/study_buddy_test

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here

# Application Settings
DEBUG=True
ENVIRONMENT=development
API_V1_STR=/api/v1
PROJECT_NAME=Study Buddy
VERSION=1.0.0

# CORS Settings
ALLOWED_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# ML Model Settings
ML_MODEL_PATH=./ml_models/
LEARNING_STYLE_MODEL_PATH=./ml_models/learning_style_classifier.pkl
PERFORMANCE_PREDICTION_MODEL_PATH=./ml_models/performance_predictor.pkl

# Email Configuration (for notifications)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# File Upload Settings
MAX_FILE_SIZE=10485760  # 10MB
UPLOAD_DIR=./uploads/

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json